+		object_to_mat3(amd->curve_ob, tmp_mat);
+		scale = mat3_to_scale(tmp_mat);
+
+		if(!cu->path) {
+			cu->flag |= CU_PATH; // needed for path & bevlist
+			makeDispListCurveTypes(scene, amd->curve_ob, 0);
+		}
+		if(cu->path)
+			length = scale*cu->path->totdist;
+	}
+	return length;
